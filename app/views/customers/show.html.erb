<p id="notice"><%= notice %></p>

<p>
  <strong>Company name:</strong>
  <%= @customer.company_name %>
</p>

<p>
  <strong>Zip:</strong>
  <%= @customer.zip %>
</p>

<p>
  <strong>Address:</strong>
  <%= @customer.address %>
</p>

<p>
  <strong>Tel:</strong>
  <%= @customer.tel %>
</p>

<p>
  <strong>Responsible name:</strong>
  <%= @customer.responsible_name %>
</p>

<table>
  <thead>
    <tr>
      <th><%= t('.activity_time')%></th>
      <th><%= t('.customer')%></th>
      <th><%= t('.sales_category')%></th>
      <th><%= t('.sales_achievement')%></th>
      <th><%= t('.detail')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer.sales_histories.each do |sales_history| %>
      <tr>
        <td><%= sales_history.activity_time %></td>
        <td><%= sales_history.customer.company_name %></td>
        <td><%= sales_history.sales_category %></td>
        <td><%= sales_history.sales_achievement %></td>
        <td><%= sales_history.detail %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
