<p id="notice"><%= notice %></p>

<h1><%= t('.title')%></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.activity_time')%></th>
      <th><%= t('.customer')%></th>
      <th><%= t('.sales_category')%></th>
      <th><%= t('.sales_achievement')%></th>
      <th><%= t('.detail')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_histories.each do |sales_history| %>
      <tr>
        <td><%= sales_history.activity_time %></td>
        <td><%= sales_history.customer.company_name %></td>
        <td><%= sales_history.sales_category %></td>
        <td><%= sales_history.sales_achievement %></td>
        <td><%= sales_history.detail %></td>
        <td><%= link_to 'Show', sales_history %></td>
        <td><%= link_to 'Edit', edit_sales_history_path(sales_history) %></td>
        <td><%= link_to 'Destroy', sales_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

